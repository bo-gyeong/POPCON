<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_kakao_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 탈퇴"
        app:layout_constraintBottom_toTopOf="@+id/btn_kakao_login"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:background="@drawable/kakao_login_large_wide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_naver_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네이버로 시작"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_login" />

    <Button
        android:id="@+id/btn_nonmember_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비회원 로그인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_naver_login">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>