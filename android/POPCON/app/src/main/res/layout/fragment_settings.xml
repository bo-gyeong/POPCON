<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popcon_grey_08">

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="38dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:background="@color/popcon_white_a90"
        android:text="설정"
        android:textColor="@color/popcon_black_03"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/l_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:background="@color/popcon_white_a90"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 된 계정"
            style="@style/TextSubtitle1.Bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc123@naver.com"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@color/popcon_white_a90"
        app:layout_constraintTop_toBottomOf="@+id/l_account">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/l_account">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림"
                style="@style/TextSubtitle1.Bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:background="@color/popcon_white_a90"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_noti_title_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감임박 최초 알림"
                    android:textColor="@color/popcon_black_03"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_noti_setting_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10일 전"
                    app:layout_constraintTop_toBottomOf="@+id/tv_noti_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:background="@color/popcon_white_a90"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_noti_title_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감임박 알림 간격"
                    android:textColor="@color/popcon_black_03"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_noti_setting_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3일 마다"
                    app:layout_constraintTop_toBottomOf="@+id/tv_noti_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:background="@color/popcon_white_a90"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_noti_title_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정"
                    android:textColor="@color/popcon_black_03"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_noti_setting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후 6:00"
                    app:layout_constraintTop_toBottomOf="@+id/tv_noti_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:background="@color/popcon_white_a90"
        android:text="로그아웃"
        style="@style/TextSubtitle1.Bold"
        app:layout_constraintTop_toBottomOf="@+id/l_noti"/>

    <TextView
        android:id="@+id/tv_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:background="@color/popcon_white_a90"
        android:text="회원탈퇴"
        style="@style/TextSubtitle1.Bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_logout"/>


    <Button
        android:id="@+id/btn_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        app:layout_constraintBottom_toTopOf="@id/btn_signout"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>