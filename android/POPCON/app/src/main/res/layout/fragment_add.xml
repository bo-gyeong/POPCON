<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="addInfo"
            type="com.ssafy.popcon.dto.AddInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/l_coupon_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_add_coupon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="0dp">

                <ImageView
                    android:id="@+id/iv_add_coupon_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_add_coupon"
                app:layout_constraintRight_toRightOf="parent"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_regi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_regi"
            app:layout_constraintTop_toBottomOf="@+id/l_coupon_list"
            app:layout_constraintVertical_weight="9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_crop_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/l_coupon_img"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_product_img"
                                android:layout_width="0dp"
                                android:layout_height="160dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="8dp"
                                app:cardCornerRadius="12dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/cv_original_img"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintHorizontal_weight="0.8">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/iv_coupon_img"
                                        android:layout_width="0dp"
                                        android:layout_height="140dp"
                                        android:scaleType="centerCrop"
                                        app:imageUri="@{addInfo.gifticonImgUri}"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"/>

                                    <ImageView
                                        android:id="@+id/iv_coupon_img_plus"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:scaleType="centerCrop"
                                        android:background="@drawable/ic_baseline_add_24"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_barcode_img"
                                android:layout_width="0dp"
                                android:layout_height="82dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/cv_product_img"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/cv_original_img"
                                app:layout_constraintHorizontal_weight="0.8">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/iv_barcode_img"
                                        android:layout_width="0dp"
                                        android:layout_height="60dp"
                                        android:scaleType="centerCrop"
                                        app:imageUri="@{addInfo.barcodeImgUri}"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"/>

                                    <ImageView
                                        android:id="@+id/iv_barcode_img_plus"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:scaleType="centerCrop"
                                        android:background="@drawable/ic_baseline_add_24"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_original_img"
                                android:layout_width="0dp"
                                android:layout_height="250dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="8dp"
                                app:cardCornerRadius="12dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/cv_product_img"
                                app:layout_constraintHorizontal_weight="1.2">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/iv_original_img"
                                        android:layout_width="0dp"
                                        android:layout_height="230dp"
                                        android:scaleType="fitCenter"
                                        app:imageUri="@{addInfo.originalImgUri}"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintHorizontal_bias="0.8"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="1.0" />

                                    <ImageView
                                        android:id="@+id/iv_original_img_plus"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:scaleType="centerCrop"
                                        android:background="@drawable/ic_baseline_add_24"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/l_crop_coupon">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-24dp"
                            android:layout_marginBottom="-14dp"
                            android:layout_marginStart="-14dp"
                            android:layout_marginEnd="-14dp"
                            style="@style/AddEditText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="30dp"
                                android:hint="@string/product_name"
                                android:text="@{addInfo.productName}"
                                android:maxLength="80"
                                android:inputType="text"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_product_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-14dp"
                            android:layout_marginBottom="-14dp"
                            android:layout_marginStart="-14dp"
                            android:layout_marginEnd="-14dp"
                            style="@style/AddEditText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_product_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="30dp"
                                android:hint="@string/product_brand"
                                android:text="@{addInfo.brandName}"
                                android:maxLength="80"
                                android:inputType="text"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_barcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-14dp"
                            android:layout_marginBottom="-14dp"
                            android:layout_marginStart="-14dp"
                            android:layout_marginEnd="-14dp"
                            style="@style/AddEditText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_barcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="30dp"
                                android:hint="@string/barcode"
                                android:text="@{addInfo.barcodeNum}"
                                android:maxLength="30"
                                android:inputType="number"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-14dp"
                            android:layout_marginBottom="-14dp"
                            android:layout_marginStart="-14dp"
                            android:layout_marginEnd="-14dp"
                            style="@style/AddEditText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="30dp"
                                android:hint="@string/date"
                                android:text="@{addInfo.due.toString()}"
                                android:maxLength="10"
                                android:inputType="number"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/l_price_chk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/l_price"
                                app:layout_constraintHorizontal_weight="0.2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/price"
                                    android:textColor="@color/popcon_grey_01"
                                    android:textSize="16sp"/>

                                <CheckBox
                                    android:id="@+id/cb_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:buttonTint="@color/popcon_orange"/>

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/l_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/l_price_chk"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_weight="0.7">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/til_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-14dp"
                                    android:layout_marginBottom="-14dp"
                                    android:layout_marginStart="-14dp"
                                    android:layout_marginEnd="-14dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_won"
                                    app:layout_constraintHorizontal_weight="1.8"
                                    style="@style/AddEditText">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="30dp"
                                        android:text="@{addInfo.price==0? `` : String.valueOf(addInfo.price)}"
                                        android:maxLength="8"
                                        android:inputType="number"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:id="@+id/tv_won"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginTop="26dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="-10dp"
                                    android:text="@string/won"
                                    android:textColor="@color/popcon_grey_03"
                                    android:textSize="18sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/til_price"
                                    app:layout_constraintHorizontal_weight="0.2"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginStart="-14dp"
                            android:layout_marginEnd="-14dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="100"
                            app:endIconMode="clear_text"
                            style="@style/AddEditText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_write_memo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/memo"
                                android:text="@{addInfo.memo}"
                                android:maxLength="100"
                                android:gravity="top"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:text="@string/regi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_round_orange"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_regi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>